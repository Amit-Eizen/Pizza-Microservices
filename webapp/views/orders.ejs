<%- include('partials/header') %>

<div class="container">
  <div class="page-header">
    <h1>ğŸ“¦ My Orders</h1>
    <p>Track your pizza orders</p>
  </div>

  <% if (orders.length === 0) { %>
    <div class="empty-state">
      <h2>No orders yet</h2>
      <p>Start by ordering some delicious pizza!</p>
      <a href="/menu" class="btn btn-primary">View Menu</a>
    </div>
  <% } else { %>
    <!-- Status Filter -->
    <div class="status-filter">
      <button class="filter-btn active" data-status="all">All Orders</button>
      <button class="filter-btn" data-status="pending">ğŸ• Pending</button>
      <button class="filter-btn" data-status="preparing">ğŸ‘¨â€ğŸ³ Preparing</button>
      <button class="filter-btn" data-status="on the way">ğŸš— On the Way</button>
      <button class="filter-btn" data-status="delivered">âœ… Delivered</button>
    </div>

    <div class="orders-container">
      <% orders.forEach(order => { %>
        <div class="order-card-enhanced" data-status="<%= order.status.toLowerCase() %>">
          <!-- Order Header -->
          <div class="order-header-enhanced">
            <div class="order-info">
              <h3>Order #<%= order.id.substring(0, 8) %></h3>
              <p class="order-date">ğŸ“… <%= order.createdAt %></p>
            </div>
            <div class="order-price-badge">
              <span class="price-label">Total</span>
              <span class="price-value">â‚ª<%= order.totalPrice %></span>
            </div>
          </div>

          <!-- Order Timeline -->
          <div class="order-timeline">
            <div class="timeline-step <%= order.status.toLowerCase() === 'pending' || order.status.toLowerCase() === 'preparing' || order.status.toLowerCase() === 'on the way' || order.status.toLowerCase() === 'delivered' ? 'active' : '' %>">
              <div class="timeline-icon">ğŸ“</div>
              <div class="timeline-label">Placed</div>
            </div>
            <div class="timeline-line <%= order.status.toLowerCase() === 'preparing' || order.status.toLowerCase() === 'on the way' || order.status.toLowerCase() === 'delivered' ? 'active' : '' %>"></div>
            <div class="timeline-step <%= order.status.toLowerCase() === 'preparing' || order.status.toLowerCase() === 'on the way' || order.status.toLowerCase() === 'delivered' ? 'active' : '' %>">
              <div class="timeline-icon">ğŸ‘¨â€ğŸ³</div>
              <div class="timeline-label">Preparing</div>
            </div>
            <div class="timeline-line <%= order.status.toLowerCase() === 'on the way' || order.status.toLowerCase() === 'delivered' ? 'active' : '' %>"></div>
            <div class="timeline-step <%= order.status.toLowerCase() === 'on the way' || order.status.toLowerCase() === 'delivered' ? 'active' : '' %>">
              <div class="timeline-icon">ğŸš—</div>
              <div class="timeline-label">On the Way</div>
            </div>
            <div class="timeline-line <%= order.status.toLowerCase() === 'delivered' ? 'active' : '' %>"></div>
            <div class="timeline-step <%= order.status.toLowerCase() === 'delivered' ? 'active' : '' %>">
              <div class="timeline-icon">âœ…</div>
              <div class="timeline-label">Delivered</div>
            </div>
          </div>

          <!-- Order Details Grid -->
          <div class="order-details-grid">
            <div class="detail-section">
              <h4>ğŸ• Order Items</h4>
              <div class="order-item">
                <div class="item-info">
                  <p class="item-name"><%= order.pizzaName %></p>
                  <p class="item-quantity">Quantity: <%= order.quantity %></p>
                </div>
              </div>
            </div>

            <div class="detail-section">
              <h4>ğŸ“ Delivery Address</h4>
              <p><%= order.deliveryAddress.street %></p>
              <p><%= order.deliveryAddress.city %></p>
              <p>ğŸ“ <%= order.deliveryAddress.zipCode %></p>
            </div>

            <div class="detail-section">
              <h4>ğŸ’³ Payment</h4>
              <p class="payment-method"><%= order.paymentMethod %></p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<script>
  // Filter functionality
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      // Update active button
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      this.classList.add('active');

      const status = this.getAttribute('data-status');
      const orders = document.querySelectorAll('.order-card-enhanced');

      orders.forEach(order => {
        if (status === 'all') {
          order.style.display = 'block';
        } else {
          const orderStatus = order.getAttribute('data-status');
          order.style.display = orderStatus === status ? 'block' : 'none';
        }
      });
    });
  });
</script>

<%- include('partials/footer') %>
