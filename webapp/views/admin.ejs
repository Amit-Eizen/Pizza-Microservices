<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Pizza Microservices</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include('partials/header', { currentPage: 'admin', isLoggedIn: true }) %>

  <main class="admin-container">
    <div class="admin-header">
      <h1>Admin Dashboard</h1>
      <p>Manage all pizza orders</p>
    </div>

    <% if (locals.error) { %>
      <div class="error-message">
        <%= error %>
      </div>
    <% } %>

    <div class="orders-section">
      <% if (orders && orders.length > 0) { %>
        <div class="orders-grid">
          <% orders.forEach(order => { %>
            <% const status = order.status.toLowerCase(); %>
            <div class="order-card" data-order-id="<%= order._id %>">
              <div class="order-header">
                <h3>Order #<%= order._id.substring(order._id.length - 6) %></h3>
                <span class="order-date"><%= new Date(order.createdAt).toLocaleDateString() %></span>
              </div>

              <div class="order-customer">
                <strong>Customer ID:</strong> <%= order.userId %>
              </div>

              <div class="order-items">
                <strong>Items:</strong>
                <ul>
                  <% order.items.forEach(item => { %>
                    <li><%= item.pizzaName %> x <%= item.quantity %> - $<%= (item.price * item.quantity).toFixed(2) %></li>
                  <% }) %>
                </ul>
              </div>

              <div class="order-total">
                <strong>Total:</strong> $<%= order.totalAmount.toFixed(2) %>
              </div>

              <div class="order-timeline">
                <div class="timeline-step <%= status === 'pending' || status === 'preparing' || status === 'baking' || status === 'delivering' || status === 'delivered' ? 'active' : '' %> <%= status === 'pending' ? 'current' : '' %>" data-status="pending">
                  <div class="step-circle"></div>
                  <div class="step-label">Pending</div>
                </div>

                <div class="timeline-line <%= status === 'preparing' || status === 'baking' || status === 'delivering' || status === 'delivered' ? 'active' : '' %>"></div>

                <div class="timeline-step <%= status === 'preparing' || status === 'baking' || status === 'delivering' || status === 'delivered' ? 'active' : '' %> <%= status === 'preparing' ? 'current' : '' %>" data-status="preparing">
                  <div class="step-circle"></div>
                  <div class="step-label">Preparing</div>
                </div>

                <div class="timeline-line <%= status === 'baking' || status === 'delivering' || status === 'delivered' ? 'active' : '' %>"></div>

                <div class="timeline-step <%= status === 'baking' || status === 'delivering' || status === 'delivered' ? 'active' : '' %> <%= status === 'baking' ? 'current' : '' %>" data-status="baking">
                  <div class="step-circle"></div>
                  <div class="step-label">Baking</div>
                </div>

                <div class="timeline-line <%= status === 'delivering' || status === 'delivered' ? 'active' : '' %>"></div>

                <div class="timeline-step <%= status === 'delivering' || status === 'delivered' ? 'active' : '' %> <%= status === 'delivering' ? 'current' : '' %>" data-status="delivering">
                  <div class="step-circle"></div>
                  <div class="step-label">Delivering</div>
                </div>

                <div class="timeline-line <%= status === 'delivered' ? 'active' : '' %>"></div>

                <div class="timeline-step <%= status === 'delivered' ? 'active current' : '' %>" data-status="delivered">
                  <div class="step-circle"></div>
                  <div class="step-label">Delivered</div>
                </div>
              </div>

              <div class="order-actions">
                <% if (status === 'pending') { %>
                  <button class="btn-update-status" onclick="updateStatus('<%= order._id %>', 'preparing')">Start Preparing</button>
                <% } else if (status === 'preparing') { %>
                  <button class="btn-update-status" onclick="updateStatus('<%= order._id %>', 'baking')">Start Baking</button>
                <% } else if (status === 'baking') { %>
                  <button class="btn-update-status" onclick="updateStatus('<%= order._id %>', 'delivering')">Out for Delivery</button>
                <% } else if (status === 'delivering') { %>
                  <button class="btn-update-status" onclick="updateStatus('<%= order._id %>', 'delivered')">Mark Delivered</button>
                <% } else if (status === 'delivered') { %>
                  <span class="status-complete">Order Complete</span>
                  <button class="btn-delete-order" onclick="deleteOrder('<%= order._id %>')">Delete</button>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="no-orders">
          <p>No orders yet</p>
        </div>
      <% } %>
    </div>
  </main>

  <script>
    async function updateStatus(orderId, newStatus) {
      try {
        const response = await fetch('/admin/update-status', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            orderId: orderId,
            status: newStatus
          })
        });

        const data = await response.json();

        if (data.success) {
          // Reload the page to show updated status
          window.location.reload();
        } else {
          alert('Failed to update order status: ' + data.message);
        }
      } catch (error) {
        console.error('Error updating status:', error);
        alert('Failed to update order status');
      }
    }

    async function deleteOrder(orderId) {
      if (!confirm('Are you sure you want to delete this order? This action cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch(`/admin/delete-order/${orderId}`, {
          method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
          // Reload the page to remove the deleted order
          window.location.reload();
        } else {
          alert('Failed to delete order: ' + data.message);
        }
      } catch (error) {
        console.error('Error deleting order:', error);
        alert('Failed to delete order');
      }
    }
  </script>
</body>
</html>
